{
  "name": "angular-chatapp-server",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "preinstall": "npm install pm2 -g",
    "start": "pm2 start ./build/app.js -i 5 --watch | ./node_modules/.bin/bunyan",
    "dev": "nodemon -r tsconfig-paths/register src/app.ts | ./node_modules/.bin/bunyan",
    "test": "jest --watchAll --no-cache --runInBand --detectOpenHandles",
    "lint": "eslint 'src/**/*.ts*'",
    "lint:fix": "eslint 'src/**/*.ts*' --fix",
    "prettier:check": "prettier --check 'src/**/*.{ts,json}'",
    "prettier:write": "prettier --write 'src/**/*.{ts,json}'",
    "build": "ttsc -p ."
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.redis-mock.js"
    ],
    "moduleNameMapper": {
      "@global/(.*)": "<rootDir>/src/global/$1",
      "@mock/(.*)": "<rootDir>/src/mocks/$1",
      "@comments/(.*)": "<rootDir>/src/features/comments/$1",
      "@followers/(.*)": "<rootDir>/src/features/followers/$1",
      "@images/(.*)": "<rootDir>/src/features/images/$1",
      "@notifications/(.*)": "<rootDir>/src/features/notifications/$1",
      "@posts/(.*)": "<rootDir>/src/features/posts/$1",
      "@redis/(.*)": "<rootDir>/src/services/redis/$1",
      "@email/(.*)": "<rootDir>/src/services/email/$1",
      "@sockets/(.*)": "<rootDir>/src/sockets/$1",
      "@user/(.*)": "<rootDir>/src/features/user/$1",
      "@chat/(.*)": "<rootDir>/src/features/chat/$1",
      "@queues/(.*)": "<rootDir>/src/services/queues/$1",
      "@db/(.*)": "<rootDir>/src/services/db/$1",
      "@workers/(.*)": "<rootDir>/src/workers/$1",
      "@root/(.*)": "<rootDir>/src/$1"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
